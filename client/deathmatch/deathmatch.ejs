<!DOCTYPE html>
<html lang="en">
<head>
    <!-- views/partials/head.ejs -->

    <meta charset="UTF-8">
    <title>Choose players</title>

    <!-- CSS (load bootstrap from a CDN) -->
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">
    <style>
        body {
            padding-top: 50px;
        }
    </style>
</head>
<body class="container">
<script src="./deathmatch/deathMatch.js"></script>
<script src="./deathmatch/PlayerSelector.js"></script>
<main>
    <button id="addPlayer_button"> Add player</button>
    <button id="startMatch_button"> Start match</button>
    <button id="back_button"> Back</button>

    <div id="addPlayers_parent">
        <% if(players.length > 0){ %>
            Choose a player:
            <% for (var i = 0; i < players.length; i++) { %>
                <div class="names_arr_elem">
                    <%= players[i].id %>
                </div>
            <% } %>

        <% } else { %>
            You don't have any players, go back and create one.
        <% } %>

    </div>

</main>

</body>
</html>
